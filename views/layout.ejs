    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">

                    <h5 class="modal-title" id="exampleModalCenterTitle">ثبت نام </h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>

                <form class="needs-validation p-3" action="/api/register" method="POST" dir="rtl"
                    oninput='confirmPassword.setCustomValidity(confirmPassword.value != passwordRe.value ? "Passwords do not match." : "")'
                    novalidate>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="firstName" class="text-right col-12">نام</label>
                            <input type="text" class="form-control textboxSite" id="firstName" name="firstName"
                                placeholder="نام" required>
                            <!-- <div class="valid-feedback">
                                Looks good!
                            </div> -->
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="lastName" class="text-right col-12">نام خانوادگی</label>
                            <input type="text" class="form-control textboxSite" id="lastName" name="lastName"
                                placeholder="نام خانوادگی" required>
                            <!-- <div class="valid-feedback">
                                Looks good!
                            </div> -->
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="userNameRe" class="text-right col-12">نام کاربری</label>

                            <input type="text" class="form-control textboxSite" id="userNameRe" name="userNameRe"
                                placeholder="نام کاربری" aria-describedby="inputGroupPrepend" required>
                            <!-- <div class="invalid-feedback">
                                Please choose a username.
                            </div> -->
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="phone" class="text-right col-12">شماره تلفن</label>
                            <input type="number" class="form-control textboxSite" id="phone" name="phone"
                                placeholder="شماره تلفن" required>
                            <!-- <div class="valid-feedback">
                                Looks good!
                            </div> -->
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="passwordRe" class="text-right col-12">رمز عبور</label>
                            <input type="password" class="form-control textboxSite" name="passwordRe" id="passwordRe"
                                placeholder="رمز عبور" required>
                            <!-- <div class="valid-feedback">
                                Looks good!
                            </div> -->
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="confirmPassword" class="text-right col-12">تایید رمز عبور</label>

                            <input type="password" class="form-control textboxSite" name="confirmPassword"
                                id="confirmPassword" placeholder="تایید رمز عبور" aria-describedby="inputGroupPrepend"
                                required>
                            <!-- <div class="invalid-feedback">
                                Please choose a username.
                            </div> -->
                        </div>
                    </div>
                    <div class="d-flex row justify-content-center col-12 text-center">
                        <div class="custom-control custom-radio m-2">
                            <input type="radio" id="gender" value="male" name="gender" class="custom-control-input"
                                required>
                            <label class="custom-control-label" for="gender">مرد</5bel>
                        </div>
                        <div class="custom-control custom-radio m-2">
                            <input type="radio" id="gender2" value="woman" name="gender" class="custom-control-input"
                                required>
                            <label class="custom-control-label" for="gender2">زن</label>
                        </div>
                    </div>
                    <div class="modal-footer col-12 align-items-center ">
                        <button type="button" class="btnSite btn-secondary m-2" data-dismiss="modal">انصراف</button>
                        <button type="submit" class="btnSite btn-primary m-2">ثبت نام</button>
                    </div>
                </form>
                <script>

                </script>
            </div>
        </div>
    </div>

    <div class="col-md-12 p-0 m-0 d-flex row mt-3 ">

        <% include ./partials/messages  %>

        <div class="col-md-9 pt-5">

            <div class="main col-12 p-0">
                <%- body %>
            </div>
        </div>

        <div id="pnlSearch" class="col-md-3 pt-5 ">
            <div class="searchPanel col-12 bg-white p-5">
            </div>
        </div>
    </div>

    <script src="/javascripts/jquery-3.4.1.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/javascripts/layout.js"></script>

