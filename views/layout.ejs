<body>

    <!-- <div class="statusLoad col-md-10"></div> -->
    <div id="clickPnl">
        <div class="headerIndex col-md-12 text-center text-secondary ">
            <div id="infoLogin" dir="rtl" class="col-4">
                <i style="font-size: 25px" class="text-white fas fa-user mr-3"></i>&nbsp;
                <label id="lblName" class="text-white"> ورود - ثبت نام </label>
            </div>
        </div>
        <div id="pnlLogin" class="panelLogin p-0">
            <div id="formLogin" class="d-flex align-items-center flex-column">
                <form action="/api/login" method="POST" dir="rtl" class="d-flex align-items-center flex-column">

                    <div class="col-md-12 pb-2">
                        <label class="text-right col-md-12" for="userName">نام کاربری</label>
                        <input type="text" class="form-control is-valid textboxSite" name="userName" id="userName"
                            placeholder="نام کاربری" required>
                    </div>

                    <div class="col-md-12 pb-2">
                        <label class="text-right col-md-12" for="password">رمز عبور</label>
                        <input type="password" class="form-control is-valid textboxSite" name="password" id="password"
                            placeholder="رمز عبور" required>
                    </div>

                    <div class="col-12 d-flex row justify-content-around">
                        <button dir="ltr" type="submit" id="btn_submit" class="col-12 btnSite btnSiteBlue">ورود
                            <i class="fas fa-sign-in-alt"></i>
                        </button>
                    </div>

                </form>
                <button data-toggle="modal" data-target=".bd-example-modal-lg" class="col-10 ml-3 btnSite btnSiteBlue">ثبت نام
                    <i class="fas fa-user-plus"></i>
                </button>

            </div>

            <div id="ShowInfo" class="align-items-start flex-column text-center p-0 m-0">
                <a class="col-md-12 bg-warning p-2" id="fullName" hidden></a>
                <a class="col-md-12 p-2 miniPnl" href="/api/general/profile">نمایش پروفایل
                    <i class="fas fa-address-card"></i></a>
                <a class="col-md-12 p-2 miniPnl" href="/api/logout">خروج
                    <i class="fas fa-sign-out-alt"></i></a>
            </div>

        </div>
    </div>


