<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <script src="https://kit.fontawesome.com/bc1633d907.js"></script>

</head>

<body>
    <div class="main d-flex justify-content-center">
        <div class="panelMain col-md-10 p-4 ">
            <div class="mainPanel col-md-12 p-0">
                <div class="mainUsers pt-2 ">
                    <!-- SHOW ALL USERS -->
                    <div id="divTblUsers">
                        <table class="table table-hover text-center" id="tblUsers" dir="rtl">
                            <thead>
                                <tr>
                                    <td id="">نام</td>
                                    <td id="">نام خانوادگی</td>
                                    <td id="">شماره همراه</td>
                                    <td id="">تاریخ عضویت</td>
                                    <td id="">آخرین ویرایش</td>
                                </tr>
                            </thead>
                            <tbody id="tBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>


            <div class="mainPanel2 pt-4 pl-0 pr-0 col-md-12 mt-2 d-flex justify-content-center ">
                <div class="col-md-4 p-0 pr-4">
                    <div class=" mpinsid"></div>
                </div>
                <div class="col-md-4 p-0 pr-2">
                    <div class=" mpinsid"></div>
                </div>
                <div class="col-md-4 p-0 pl-3">
                    <div class=" mpinsid"></div>
                </div>
            </div>
        </div>
        <div class=" col-md-2 p-0"></div>
        <div class="panelRight col-md-2 p-0">
            <div class="bckPic col-md-12 d-flex flex-column align-items-center ">
                <div class="containerImg">
                    <img id="avatarImg" src="/images/users/user.png" height="100%" width="100%">
                    <div class="addImg"><i style="font-size: 50px" class="fas fa-upload"></i></div>
                </div>
                <label class="mt-2" id="fullName"></label>
                <label class="mt-2" id="phone"></label>
                <label class="mt-2" id="creatAt"></label>
                <label class="mt-2" id="LUpdate"></label>
            </div>
            <div class="panelRight-bottom">
                <a id="showFormUpdate" class="aMenu btn bg-transparent border-bottom rounded-0 col-md-12"
                    data-toggle="modal" data-target="#exampleModal">
                    ویرایش
                    &nbsp;<i class="fas fa-user-edit"></i> </a>
                <a class="aMenu headUsers btn bg-transparent border-bottom rounded-0 col-md-12">
                    تنظیمات کاربران
                    &nbsp;<i class="fas fa-user-cog"></i> </a>
                <a id="insertUserForm" class="aMenu btn bg-transparent border-bottom rounded-0 col-md-12"
                    data-toggle="modal" data-target="#exampleModal">
                    کاربر جدید
                    &nbsp;<i class="fas fa-user-plus"></i> </a>
                <a id="logout" class="aMenu btn bg-transparent border-bottom rounded-0 col-md-12" href="./admin/logout">
                    خروج
                    &nbsp;<i class="fas fa-sign-out-alt"></i> </a>
            </div>
        </div>
    </div>


    <div class="mainAdmin">

        <a id="showFormUpdateUsers" style="display: none" class="btn btn-primary" data-toggle="modal"
            data-target="#exampleModal">ویرایش کاربر</a>

        <form id="formUpload" action="/api/general/avatarUploud" style="display: none" method="POST"
            enctype="multipart/form-data">
            <input id="chooseImg" type="file" name="file" size="50" />
            <br />
            <input id="sendFile" type="submit" value="Upload File" />
        </form>

    </div>




    <!-- FORM UPLOAD IMAGE -->


    <!----------------------------------------------=>UPDATE FORM<=--------------------------------------------------->
    <!----------------------------------------------=>UPDATE FORM<=--------------------------------------------------->
    <!----------------------------------------------=>UPDATE FORM<=--------------------------------------------------->
    <!-- Button trigger modal -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ویرایش</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <!-- <label for="firstName">نام:</label> -->
                        <input type="text" class="form-control" id="firstName" placeholder="نام">
                    </div>
                    <div class="form-group">
                        <!-- <label for="lastName">نام خانوادگی:</label> -->
                        <input type="text" class="form-control" id="lastName" placeholder="نام خانوادگی">
                    </div>
                    <div class="form-group">
                        <!-- <label for="phone">موبایل:</label> -->
                        <input type="text" class="form-control" id="phoneUpdate" placeholder="موبایل">
                    </div>
                    <div class="form-group">
                        <!-- <label for="password">پسوورد:</label> -->
                        <input type="text" class="form-control" id="password" placeholder="رمز عبور">
                    </div>
                    <div class="form-group">
                        <!-- <label for="confirmPassword">تایید پسورد:</label> -->
                        <input type="text" class="form-control" id="confirmPassword" placeholder="تایید رمز عبور">
                    </div>
                </div>
                <div class="modal-footer justify-content-around p-2">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">لغو</button>
                    <button type="button" id="update" class="btn btn-primary">اعمال تغیرات</button>
                    <button type="button" id="deleteUser" class="btn btn-danger">حذف</button>
                    <button type="button" id="rcoveryPass" class="btn btn-warning">بازیابی رمز عبور</button>
                    <button type="button" id="insertUser" class="btn btn-primary">افزودن کاربر</button>
                </div>
            </div>
        </div>
    </div>

    
    <script src="/javascripts/jquery-3.4.1.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/javascripts/profile.js"></script>
</body>

</html>